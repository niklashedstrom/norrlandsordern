mixin toplist(t)
  table.borderless.table.m-0
    thead
      tr
        th(scope='col')
        th(scope='col') Namn
        th(scope='col') Distans (m)
    tbody
      each item in t
        if item.self == true
          tr
            td
              b= item.index
            td
              a.user-link(href=`/users/${item.user._id}`)
                b= item.user.name
              if item.user.badge == 'star-gold'
                img.user-badge(src='/images/star-gold.svg', alt='Guldstj채rna')
              if item.user.badge == 'star-silver'
                img.user-badge(src='/images/star-silver.svg', alt='Silverstj채rna')
            td
              b= formatNumber(item.volume_sum/33*0.066, 2)
        else
          tr
            td= item.index
            td
              a.user-link(href=`/users/${item.user._id}`)= item.user.name
              if item.user.badge == 'star-gold'
                img.user-badge(src='/images/star-gold.svg', alt='Guldstj채rna')
              if item.user.badge == 'star-silver'
                img.user-badge(src='/images/star-silver.svg', alt='Silverstj채rna')
            td= formatNumber(item.volume_sum/33*0.066, 2)